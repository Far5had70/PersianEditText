<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/os_parent_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_margin="0.9dp"
        android:id="@+id/background_image"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/below_edittext"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:id="@+id/so_imageview"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:id="@+id/so_edittext"
        android:layout_marginRight="50dp"
        android:gravity="center"
        android:background="@null"
        android:layout_marginEnd="50dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/below_edittext"
        android:layout_below="@+id/so_edittext">



    </RelativeLayout>

</RelativeLayout>